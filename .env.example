# ============================================
# POS.com RMS Configuration
# ============================================
# Copy this file to .env and update values

# Environment
NODE_ENV=development

# Server
PORT=4000
HOST=localhost

# ============================================
# SECURITY SETTINGS - CHANGE IN PRODUCTION!
# ============================================
# Generate with: openssl rand -hex 64
JWT_SECRET=CHANGE_THIS_TO_A_SECURE_64_CHAR_HEX_STRING_IN_PRODUCTION

# Default admin password (min 8 chars, must include uppercase, lowercase, number)
RMS_ADMIN_PASSWORD=ChangeMe123!

# CORS - Comma-separated origins allowed
CORS_ORIGIN=http://localhost:3000

# ============================================
# Database
# ============================================
RMS_DB_PATH=./.rms/rms.db

# ============================================
# Teams Integration (optional)
# ============================================
TEAMS_WEBHOOK_URL=

# ============================================
# Git Integration
# ============================================
GIT_AUTO_LINK=true
GIT_BRANCH_PREFIX=rms-

# ============================================
# SLA Defaults (in hours)
# ============================================
SLA_CRITICAL=4
SLA_HIGH=24
SLA_MEDIUM=72
SLA_LOW=168

# ============================================
# Logging
# ============================================
LOG_LEVEL=info
